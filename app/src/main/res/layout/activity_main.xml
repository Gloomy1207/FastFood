<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gloomy.fastfood.mvp.views.main.MainActivity">

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/footerBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        app:itemBackground="@android:color/white"
        app:itemIconTint="@color/footer_bar_color_selector"
        app:itemTextColor="@color/footer_bar_color_selector"
        app:menu="@menu/footer_bar_items" />

    <com.gloomy.fastfood.widgets.NonSwipeViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/footerBar" />
</RelativeLayout>
